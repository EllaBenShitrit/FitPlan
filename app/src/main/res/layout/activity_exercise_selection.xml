<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#B3E5FC">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:backgroundTint="#4FC3F7"
        android:textColor="#000000"/>

    <TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select exercises for your workout:"
    android:layout_gravity="center_horizontal"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginTop="12dp"
    android:textColor="#000000"/>

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Click on an exercise name to view its detials)"
        android:layout_gravity="center_horizontal"
        android:textSize="19sp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExercises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnAddNewExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Exercise"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="#9966CC"
        android:textColor="#000000"/>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Selection"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4FC3F7"
        android:textColor="#000000"/>
</LinearLayout>